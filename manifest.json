{
  "manifest_version": 3,
  "name": "Hatchykins Name Changer",
  "version": "1.1",
  "description": "Change CMDRHatch to Hatchykins, Hatchypoo, or a custom name.",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "options.html",
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "icons": {
    "128": "icon128.png"
  }
}
